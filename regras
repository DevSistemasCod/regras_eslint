      "no-unused-vars": ["error"],                                     // Proíbe variáveis declaradas mas não utilizadas.
      curly: ["error", "all"],                                         // Exige que todos os blocos de código (como em if, for, etc.) estejam entre chaves {}
      "no-undef": ["error"],                                           // Impede o uso de variáveis não definidas.
      "prefer-const": ["error"],                                       // Exige o uso de const em vez de let para variáveis que não são reatribuídas.
      "no-var": ["error"],                                             // Exige let ou const no lugar de var
